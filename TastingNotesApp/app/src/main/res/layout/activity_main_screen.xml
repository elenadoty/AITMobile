<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.elenadoty.tastingnotesapp.activities.MainScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:theme="@style/ToolBarStyle"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment android:name="com.example.elenadoty.tastingnotesapp.activities.MyPostsActivity"
            android:id="@+id/postsRelativeLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="visible"/>

        <fragment class="com.google.android.gms.maps.MapFragment"
            android:id="@+id/include_map"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            />

        <fragment android:name="com.example.elenadoty.tastingnotesapp.activities.ForumActivity"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/forumRelativeLayout"
            android:visibility="gone"/>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
